.post {
    padding:10px 20px;
    border-bottom:1px solid #EEE;
    margin-top:10px;
    background: var(--content-bg-color);
    height:auto;
    & .tags {
      clear:both;
    }
}
.post-title {
    /*margin:.83em 0;*/
    font-size:22px;
    /*border-bottom: 1px dashed #ccc;*/
    padding-bottom: 10px;
}
.post-meta {
  margin-top:-.5em;
  padding:0 0 15px 0;
  color:#999;
  font-size:0.8em;
  border-bottom: 1px solid #eee;
  & li {
    display:inline-block;
    margin:0 4px 0 0;
    padding:4px 6px;
    color:#757575;
    & .icon {
      display: inline-block;
      /*图标不居中加上面这行*/
      height: 12px;
      width:12px;
      text-align:center;
      margin-right:4px;
    }
    & .meta-name {
      margin-right:4px;
    }
    & .tags-link:before {
      content:"#";
    }
    & .category-link:before {
      content:'◈';
    }
    & a {
      margin-left:7px;
    }
  }
}
.post-content {
    line-height:1.75;
    font-size:15px;
    font-family:'微软雅黑';
    & h2 {
      color: #000;
      font-size: 16px;
    }
    & a {
      color:var(--bright-color);
      &:hover {
        text-decoration:underline;
      }
    }
    & p a:before {
      font-family: "Font Awesome 6 Pro";
      content: "\e1cd";
      margin-right:5px;
    }
    & blockquote {
      background: #f6f7f9;
      padding: 10px 20px;
      margin: 10px 0px 10px 0px;
      border-left: solid 3px var(--bright-color);
    }
}
