.page-panel {
    padding:10px 20px;
    margin-top:10px;
    border-bottom:1px solid #EEE;
    background: var(--content-bg-color);
    /*height:calc(100% - 31px);*/
    height:calc(100% - 40px);
    font-size:14px;
    line-height:25px;
    & .page-title {
        margin:.83em 0;
        font-size:1.6em;
        font-weight:400;
        padding-bottom: 10px;
    }
    & .list-title {
        border-left:thick solid var(--bright-color);
        padding-left: 15px;
    }
    @media (min-width:960px) {
        #list-content {
            column-count: 2;
            column-gap: 20px;
        }
    }
    & #list-content{
        opacity: 0;
        transition: opacity 3s;
        &.list-content-show {
            opacity: 1;
        }
    }
    h1,h2,h3,h4,h5,h6 {
        font-weight:bold;
        }
    ul {
        padding:0 0 0 16px;
    }
    input {
        background:#000;
        &[type=checkbox] {
            color:#000;
            font-size:12px;
            position: relative;
            left:calc(1px - 100vw);
            top: 5px;
        }
        &:disabled{
            cursor:not-allowed;
            background-color:red;
            opacity:1;
            &:after {
                font-family:"Font Awesome 6 Pro";
                content:"";
                position: relative;
                left:calc(1px + 100vw);
            }
        }
        &:checked {
            &:after{
                font-family:"Font Awesome 6 Pro";
                content:"";
                position: relative;
                left:calc(1px + 100vw);
            }
        }
    }
}
.pages-index,.pages-category,.pages-tags,.pages-archive {
    & .page-panel {
        height:auto;
        & .page-title {
            font-size:1em;
            border-bottom:none;
            padding-bottom: 0;
        }
    }
}
