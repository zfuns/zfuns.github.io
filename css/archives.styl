.collection-sub {
    font-size:0.7em;
    }
.archive-block {
    & .archive-end {
        background:#fff;
        border-radius: 25px;
        border: 1px solid #e6e7eb;
        display:inline-block;
        padding: 4px 20px;
    }
    & .archive-list-block {
        & .archive-list-year {
            background:#ff7fb0;
            display:inline-block;
            border-radius: 25px;
            box-shadow:.0625rem 0 .625rem .0625rem #ff80b066;
            padding: 4px 20px;
            margin-left:18px;
            color: #fff;
        }
        & ul {
            list-style: none;
            position: relative;
            border-left: 3px solid #7fb3ff;
            margin: 0 0 0 54px;
            padding: 0;
            & li {
                display:flex;
                padding:14px 0 14px 8px;
                line-height:22px;
                &:first-child {
                    padding-top: 35px;
                }
                &:last-child {
                    padding-bottom: 25px;
                }
                & time {
                    /*background: #90CAF9;*/
                    white-space:nowrap;
                    position:relative;
                    left:-54px;
                    display:flex;
                    font-size:12px;
                    &::after {
                        background:#fff;
                        content:"";
                        border-radius: 50%;
                        border: 3.14px solid #7fb3ff;
                        position: absolute;
                        height:1px;
                        width:1px;
                        left:41px;
                        top:5px;
                    }
                }
                & a {
                    background: #7fb3ff;
                    color: #fff;
                    font-size: 12px;
                    font-weight: 400;
                    text-decoration:none;
                    padding: 4px 11px 4px 2px;
                    position:relative;
                    left:-20px;
                    top: -6px;
                    display: flex;
                    transition: top 0.2s,left 0.2s;
                    border-radius: 2px;
                    box-shadow:0 0 6px rgba(0,0,0,0.15);
                    &:hover {
                        top: -4px;
                        left: -18px;
                        box-shadow:0 0 0 rgba(0,0,0,0.0);
                    }
                    &:before {
                        content: "";
                        position: relative;
                        width: 0;
                        height: 0;
                        border: 4px solid transparent;
                        border-right-color: #7fb3ff;
                        left: -9px;
                        top: 6px;
                    }
                }
            }
        }

}
}
